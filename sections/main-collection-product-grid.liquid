    flex-direction: column;
    width: 100%;
    max-width: 280px;
    min-height: 420px;
    justify-content: flex-start;
    align-items: stretch;
    padding: 0;
    position: relative;
  }

  .news-slider .slider-product-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    border-color: #d0d0d0;
  }

  .news-slider .card-top {
    position: relative;
    width: 100%;
    height: 240px;
    overflow: hidden;
    background: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
