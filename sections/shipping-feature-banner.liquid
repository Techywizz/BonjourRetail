    },
    {
      "type": "header",
      "content": "Fast Delivery Feature"
    },
    {
      "type": "image_picker",
      "id": "fast_delivery_icon",
      "label": "Fast Delivery Icon"
    },
    {
      "type": "text",
      "id": "fast_delivery_title",
      "label": "Fast Delivery Title",
      "default": "Fast Delivery"
    },
    {
      "type": "text",
      "id": "fast_delivery_description",
      "label": "Fast Delivery Description",
      "default": "2-3 business days"
    },
    {
      "type": "header",
      "content": "Easy Returns Feature"
    },
    {
      "type": "image_picker",
      "id": "easy_returns_icon",
      "label": "Easy Returns Icon"
    },
    {
      "type": "text",
      "id": "easy_returns_title",
      "label": "Easy Returns Title",
      "default": "Easy Returns"
    },
    {
      "type": "text",
      "id": "easy_returns_description",
      "label": "Easy Returns Description",
      "default": "30-day return policy"
    },
    {
      "type": "header",
      "content": "Secure Payment Feature"
    },
    {
      "type": "image_picker",
      "id": "secure_payment_icon",
      "label": "Secure Payment Icon"
    },
    {
      "type": "text",
      "id": "secure_payment_title",
      "label": "Secure Payment Title",
      "default": "Secure Payment"
    },
    {
      "type": "text",
      "id": "secure_payment_description",
      "label": "Secure Payment Description",
      "default": "SSL encrypted checkout"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    { "type": "range", "id": "margin_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Margin top", "default": 0 },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding top", "default": 36 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding bottom", "default": 36 }
  ],
  "presets": [
    { "name": "Shipping Feature Banner" }
  ]
