        { "value": "600", "label": "Semi Bold" },
        { "value": "700", "label": "Bold" }
      ],
      "default": "700"
    },
    {
      "type": "header",
      "content": "Free Shipping Feature"
    },
    {
      "type": "image_picker",
      "id": "free_shipping_icon",
      "label": "Free Shipping Icon"
    },
