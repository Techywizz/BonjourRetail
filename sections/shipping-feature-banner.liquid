{{ 'section-shipping-feature-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .shipping-feature-banner {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .shipping-feature-banner {
      margin-top: {{ section.settings.margin_top }}px;
    }
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="shipping-feature-banner color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding{% if section.settings.full_width %} shipping-feature-banner--full-width{% endif %}">
  <div class="{% if section.settings.full_width %}page-width-full{% else %}page-width{% endif %}">
    <div class="shipping-feature-banner__container">
      {%- if section.settings.main_heading != blank -%}
        <h2 class="shipping-feature-banner__heading {{ section.settings.main_heading_alignment }}" 
            style="font-size: {{ section.settings.main_heading_size }}px; font-weight: {{ section.settings.main_heading_weight }};">
          {{ section.settings.main_heading }}
        </h2>
      {%- endif -%}
      
      <div class="shipping-feature-banner__content">
        <!-- Free Shipping -->
        <div class="shipping-feature-banner__feature">
          <div class="shipping-feature-banner__icon">
            {%- if section.settings.free_shipping_icon != blank -%}
              <img src="{{ section.settings.free_shipping_icon | image_url: width: 40 }}" 
                   alt="{{ section.settings.free_shipping_title }}" 
                   width="40" height="40" loading="lazy">
            {%- else -%}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2L13.09 8.26L20 9L13.09 9.74L12 16L10.91 9.74L4 9L10.91 8.26L12 2Z" fill="currentColor"/>
              </svg>
            {%- endif -%}
          </div>
          <div class="shipping-feature-banner__text">
            <h3 class="shipping-feature-banner__title">{{ section.settings.free_shipping_title | default: 'Free Shipping' }}</h3>
            <p class="shipping-feature-banner__description">{{ section.settings.free_shipping_description | default: 'On orders over $50' }}</p>
          </div>
        </div>

        <!-- Fast Delivery -->
        <div class="shipping-feature-banner__feature">
          <div class="shipping-feature-banner__icon">
            {%- if section.settings.fast_delivery_icon != blank -%}
              <img src="{{ section.settings.fast_delivery_icon | image_url: width: 40 }}" 
                   alt="{{ section.settings.fast_delivery_title }}" 
                   width="40" height="40" loading="lazy">
            {%- else -%}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2L13.09 8.26L20 9L13.09 9.74L12 16L10.91 9.74L4 9L10.91 8.26L12 2Z" fill="currentColor"/>
              </svg>
            {%- endif -%}
          </div>
          <div class="shipping-feature-banner__text">
            <h3 class="shipping-feature-banner__title">{{ section.settings.fast_delivery_title | default: 'Fast Delivery' }}</h3>
            <p class="shipping-feature-banner__description">{{ section.settings.fast_delivery_description | default: '2-3 business days' }}</p>
          </div>
        </div>

        <!-- Easy Returns -->
        <div class="shipping-feature-banner__feature">
          <div class="shipping-feature-banner__icon">
            {%- if section.settings.easy_returns_icon != blank -%}
              <img src="{{ section.settings.easy_returns_icon | image_url: width: 40 }}" 
                   alt="{{ section.settings.easy_returns_title }}" 
                   width="40" height="40" loading="lazy">
            {%- else -%}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2L13.09 8.26L20 9L13.09 9.74L12 16L10.91 9.74L4 9L10.91 8.26L12 2Z" fill="currentColor"/>
              </svg>
            {%- endif -%}
          </div>
          <div class="shipping-feature-banner__text">
            <h3 class="shipping-feature-banner__title">{{ section.settings.easy_returns_title | default: 'Easy Returns' }}</h3>
            <p class="shipping-feature-banner__description">{{ section.settings.easy_returns_description | default: '30-day return policy' }}</p>
          </div>
        </div>

        <!-- Secure Payment -->
        <div class="shipping-feature-banner__feature">
          <div class="shipping-feature-banner__icon">
            {%- if section.settings.secure_payment_icon != blank -%}
              <img src="{{ section.settings.secure_payment_icon | image_url: width: 40 }}" 
                   alt="{{ section.settings.secure_payment_title }}" 
                   width="40" height="40" loading="lazy">
            {%- else -%}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2L13.09 8.26L20 9L13.09 9.74L12 16L10.91 9.74L4 9L10.91 8.26L12 2Z" fill="currentColor"/>
              </svg>
            {%- endif -%}
          </div>
          <div class="shipping-feature-banner__text">
            <h3 class="shipping-feature-banner__title">{{ section.settings.secure_payment_title | default: 'Secure Payment' }}</h3>
            <p class="shipping-feature-banner__description">{{ section.settings.secure_payment_description | default: 'SSL encrypted checkout' }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

