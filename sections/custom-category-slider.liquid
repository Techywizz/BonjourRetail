      "type": "range",
      "id": "top_badge_margin_top",
      "label": "Top Badge Top Margin",
      "min": 5,
      "max": 20,
      "step": 1,
      "unit": "px",
      "default": 10
    },
    {
      "type": "range",
      "id": "top_badge_margin_left",
      "label": "Top Badge Left Margin",
      "min": 5,
      "max": 20,
      "step": 1,
      "unit": "px",
      "default": 10
    },
